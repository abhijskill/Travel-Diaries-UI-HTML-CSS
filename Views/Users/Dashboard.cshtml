@{
    ViewBag.Title = "Dashboard";
}
<head>
    <style>
        body {
            margin: 0px;
            border: 0px;
            /*background-image: url('../../Content/Images/crud3jpg.jpg');*/
            /*background-image: url('../../Content/Images/map.jpg');*/
        }

        .button {
            /*background-color: #4CAF50;*/ /* Green */
            border: none;
            color: white;
            padding: 20px;
            padding-left: 0px;
            height: 250px;
            width: 400px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            /*margin: 4px 2px;*/
            cursor: pointer;
            border-radius: 4px;
            margin-top: 1.5cm;
            margin-right: 2cm;
            color: white;
        }

            .button:hover {
                background: white;
                color: palegoldenrod;
            }

        .centered {
            position: absolute;
            top: 30%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        #header {
            width: 1600px;
            height: 140px;
            background-color: #263238;
            /*background-color: transparent;*/
            color: white;
            text-align: center;
            margin-top: 0px;
            margin-left: -15px;
        }

        .data {
            height: 800px;
            float: left;
            /*background-color: #CFD8DC;*/
            background-image: url('../../Content/Images/map.jpg');
            width: 1600px;
            padding-top: 100px;
            margin-left: -15px;
        }

        .box {
            width: 300px;
            height: 70px;
            border-bottom: solid 1px white;
            text-align: center;
            padding-top: 20px;
        }

            .box:hover {
                background: #CFD8DC;
                color: black;
            }

        #panel {
            font-size: 16px;
            margin-left: 0px;
            align-content: center;
            text-align: center;
            background-color: #4CAF50;
            color: white;
            /* border: solid 1px #a6d8a8;*/
            margin: auto;
        }

        .flip {
            border: none;
            color: white;
            padding: 20px;
            height: 150px;
            width: 150px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            /*margin: 4px 2px;*/
            cursor: pointer;
            border-radius: 4px;
            margin-right: 2cm;
            color: white;
        }

            .flip:hover {
                background: white;
                color: palegoldenrod;
            }

        #panel {
            display: none;
        }
    </style>

</head>
